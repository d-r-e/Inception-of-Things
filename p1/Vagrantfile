if !File.exist?(".env")
    puts "Inception-Of-Things: ERROR: .env file does not exist"
    exit
end

File.open(".env", "r") do |f|
    f.each_line do |line|
        if line =~ /^K3S_TOKEN/
            ENV["K3S_TOKEN"] = line.split("=")[1].strip
        end
    end
    if !ENV["K3S_TOKEN"]
        puts "Inception-Of-Things: ERROR: K3S_TOKEN not found in .env file"
        exit
    end
end

Vagrant.configure("2") do |config|
    config.vm.box = "generic/alpine317"
    config.vm.define "darodrigS" do |server|
        server.vm.hostname = "darodrigS"
        server.vm.network "private_network", ip: "192.168.56.110"
        server.vm.provider "virtualbox" do |v|
            v.name = "darodrigS"
            v.memory = 1024
            v.cpus = 1
        end
        server.vm.synced_folder ".", "/vagrant"
        server.vm.provision "shell", inline: <<-SHELL
        source /vagrant/.env
        curl -sfL https://get.k3s.io | K3S_KUBECONFIG_MODE="644" K3S_TOKEN="$(cat /vagrant/.env | cut -f2 -d'=')" INSTALL_K3S_EXEC="--flannel-iface eth1" sh -s -
        echo 'alias k="sudo k3s kubectl"' >> ~/.bashrc
        SHELL
    end

    config.vm.define "darodrigSW" do |worker|
        worker.vm.hostname = "darodrigSW"
        worker.vm.network "private_network", ip: "192.168.56.111"
        worker.vm.provider "virtualbox" do |v|
            v.name = "darodrigSW"
            v.memory = 512
            v.cpus = 1
        end
        worker.vm.synced_folder ".", "/vagrant"

        worker.vm.provision "shell", inline: <<-SHELL
        source /vagrant/.env
        curl -sfL https://get.k3s.io | K3S_KUBECONFIG_MODE="644" K3S_URL=https://192.168.56.110:6443 K3S_TOKEN="$(cat /vagrant/.env | cut -f2 -d'=')" INSTALL_K3S_EXEC="--flannel-iface eth1" sh -s -
        SHELL
    end
    
end