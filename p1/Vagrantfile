# Two machines using k3s, one as a server, one as a worker.

Vagrant.configure("2") do |config|
  config.vm.box = "alpine/alpine64"
  config.vm.box_url = "https://app.vagrantup.com/alpine/boxes/alpine64"

  #Â The first machine will have darodrigS as hostname. It will have 512MB of RAM and 1 CPU.
  config.vm.define "darodrigS" do |control|

    control.vm.provider :virtualbox do |vb|
      vb.memory = 512
      vb.cpus = 1
      vb.gui = false
    end
    control.vm.provision "shell", inline: "echo 'vagrant:darodrig' | chpasswd"
    control.vm.provision "shell", inline: "echo 'root:darodrig' | chpasswd"
    control.vm.provision "shell", inline: "echo 'vagrant ALL=(ALL) NOPASSWD:ALL' >> /etc/sudoers"

  
    control.vm.network "private_network", ip: "192.168.56.110"

  end
end